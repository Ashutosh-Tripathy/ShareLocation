<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FragmentPlaceholder">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="btn_secondary">
        <!--<item name="android:drawable">@drawable/secondarybutton</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:colorBackground">#2196F3</item>-->
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="btn_primary">
        <!--<item name="android:drawable">@drawable/secondarybutton</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:colorBackground">#2196F3</item>-->
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_primary">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">RobotoDraft</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_info">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">RobotoDraft</item>
        <!--<item name="android:textStyle">regular</item>-->
    </style>

    <style name="label_default">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <!--<item name="android:textStyle">light</item>-->
    </style>
    <style name="label_light">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!--<item name="android:textStyle">light</item>-->
    </style>
    <style name="text_default">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <!--<item name="android:textStyle">light</item>-->
    </style>
</resources>
